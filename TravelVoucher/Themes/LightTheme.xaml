<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--#region Базовые настройки-->
        <!-- Основное окно -->
        <Style x:Key="mainTextPanel" 
               TargetType="StackPanel">
            <Style.Setters>
                <Setter Property="Background" 
                        Value="#7BABAA"/>
            </Style.Setters>
        </Style>

        <Style x:Key="mainButton"
                   TargetType="Button">
            <Style.Setters>
                <Setter Property="Background"
                        Value="#0000"/>

                <Setter Property="BorderThickness"
                        Value="0"/>

                <Setter Property="Margin"
                        Value="0 0 0 5"/>

                <Setter Property="Cursor"
                        Value="Hand"/>

                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style.Setters>

            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Background"
                            Value="#C6C6C6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Кнопка назад -->
        <Style x:Key="txtBlockButtonBackContent"
               TargetType="TextBlock">
            <Style.Setters>
                <Setter Property="Margin"
                        Value="-7 6 0 0 "/>

                <Setter Property="FontSize"
                        Value="16"/>
            </Style.Setters>
        </Style>
    <!--#endregion-->

    <!--#region Авторизация-->
        <!-- Страница авторизации -->
        <Style x:Key="borderLogin"
               TargetType="Border">
            <Style.Setters>
                <Setter Property="Padding"
                        Value="180"/>

                <Setter Property="Background"
                        Value="#DFEBEA"/>
            </Style.Setters>
        </Style>
        
        <Style x:Key="txtBlockTitle"
               TargetType="TextBlock">
            <Style.Setters>
                <Setter Property="VerticalAlignment"
                        Value="Center"/>

                <Setter Property="HorizontalAlignment"
                        Value="Center"/>

                <Setter Property="FontSize"
                        Value="40"/>
            </Style.Setters>
        </Style>

        <Style x:Key="txtBlockLogin"
               TargetType="TextBlock">
            <Style.Setters>
                <Setter Property="VerticalAlignment"
                        Value="Center"/>

                <Setter Property="HorizontalAlignment"
                        Value="Right"/>

                <Setter Property="FontSize"
                        Value="26"/>
            </Style.Setters>
        </Style>

        <Style x:Key="txtBlockPassword"
               TargetType="TextBlock"
               BasedOn="{StaticResource txtBlockLogin}">
            
        </Style>

        <Style x:Key="txtBoxLogin"
               TargetType="TextBox">
            <Style.Setters>
                <Setter Property="Background"
                        Value="#FFF2F2"/>

                <Setter Property="FontSize"
                        Value="26"/>

                <Setter Property="Margin"
                        Value="10"/>

                <Setter Property="TextAlignment"
                        Value="Left"/>

                <Setter Property="BorderBrush"
                        Value="#000000"/>

                <Setter Property="BorderThickness"
                        Value="0 0 0 1.2"/>
            </Style.Setters>
        </Style>

        <Style x:Key="passBoxPassword"
               TargetType="PasswordBox">
            <Style.Setters>
                <Setter Property="Background"
                        Value="#FFF2F2"/>

                <Setter Property="FontSize"
                        Value="26"/>

                <Setter Property="Margin"
                        Value="10"/>

                <Setter Property="BorderBrush"
                        Value="#000000"/>

                <Setter Property="BorderThickness"
                        Value="0 0 0 1.2"/>
            </Style.Setters>
        </Style>

        <Style x:Key="btnLogin"
               TargetType="Button">
            <Style.Setters>
                <Setter Property="Margin"
                        Value="10"/>

                <Setter Property="Background"
                        Value="#84CCCA"/>

                <Setter Property="Cursor"
                        Value="Hand"/>

                <Setter Property="BorderBrush"
                        Value="#000000"/>

                <Setter Property="BorderThickness"
                        Value="1.2"/>
            </Style.Setters>

            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Background"
                            Value="#74B3B1"/>
                </Trigger>
            </Style.Triggers>

            <Style.Resources>
                <Style TargetType="Border">
                    <Style.Setters>
                        <Setter Property="CornerRadius"
                                Value="10"/>
                    </Style.Setters>
                </Style>
            </Style.Resources>
        </Style>
    <!--#endregion-->

    <!--#region Настройки заголовка и бокового меню-->
