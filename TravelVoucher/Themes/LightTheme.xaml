<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Основное окно -->
    <Style x:Key="mainTextPanel" 
           TargetType="StackPanel">
        <Style.Setters>
            <Setter Property="Background" 
                    Value="#7BABAA"/>
        </Style.Setters>
    </Style>

    <Style x:Key="mainButton"
               TargetType="Button">
        <Style.Setters>
            <Setter Property="Background"
                    Value="#0000"/>

            <Setter Property="BorderThickness"
                    Value="0"/>

            <Setter Property="Margin"
                    Value="0 0 0 5"/>

            <Setter Property="Cursor"
                    Value="Hand"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>

        <Style.Triggers>
            <Trigger Property="IsMouseOver"
                     Value="True">
                <Setter Property="Background"
                        Value="#C6C6C6"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Страница авторизации -->
    <Style x:Key="borderLogin"
           TargetType="Border">
        <Style.Setters>
            <Setter Property="Padding"
                    Value="180"/>

            <Setter Property="Background"
                    Value="#DFEBEA"/>
        </Style.Setters>
    </Style>
    
    <Style x:Key="txtBlockTitle"
           TargetType="TextBlock">
        <Style.Setters>
            <Setter Property="VerticalAlignment"
                    Value="Center"/>

            <Setter Property="HorizontalAlignment"
                    Value="Center"/>

            <Setter Property="FontSize"
                    Value="40"/>
        </Style.Setters>
    </Style>

    <Style x:Key="txtBlockLogin"
           TargetType="TextBlock">
        <Style.Setters>
            <Setter Property="VerticalAlignment"
                    Value="Center"/>

            <Setter Property="HorizontalAlignment"
                    Value="Right"/>

            <Setter Property="FontSize"
                    Value="26"/>
        </Style.Setters>
    </Style>

    <Style x:Key="txtBlockPassword"
           TargetType="TextBlock"
           BasedOn="{StaticResource txtBlockLogin}">
        
    </Style>

    <Style x:Key="txtBoxLogin"
           TargetType="TextBox">
        <Style.Setters>
            <Setter Property="Background"
                    Value="#FFF2F2"/>

            <Setter Property="FontSize"
                    Value="26"/>

            <Setter Property="Margin"
                    Value="10"/>

            <Setter Property="TextAlignment"
                    Value="Left"/>

            <Setter Property="BorderBrush"
                    Value="#000000"/>

            <Setter Property="BorderThickness"
                    Value="0 0 0 1.2"/>
        </Style.Setters>
    </Style>

    <Style x:Key="passBoxPassword"
           TargetType="PasswordBox">
        <Style.Setters>
            <Setter Property="Background"
                    Value="#FFF2F2"/>

            <Setter Property="FontSize"
                    Value="26"/>

            <Setter Property="Margin"
                    Value="10"/>

            <Setter Property="BorderBrush"
                    Value="#000000"/>

            <Setter Property="BorderThickness"
                    Value="0 0 0 1.2"/>
        </Style.Setters>
    </Style>

    <Style x:Key="btnLogin"
           TargetType="Button">
        <Style.Setters>
            <Setter Property="Margin"
                    Value="10"/>

            <Setter Property="Background"
                    Value="#84CCCA"/>

            <Setter Property="Cursor"
                    Value="Hand"/>

            <Setter Property="BorderBrush"
                    Value="#000000"/>

            <Setter Property="BorderThickness"
                    Value="1.2"/>
        </Style.Setters>

        <Style.Triggers>
            <Trigger Property="IsMouseOver"
                     Value="True">
                <Setter Property="Background"
                        Value="#74B3B1"/>
            </Trigger>
        </Style.Triggers>

        <Style.Resources>
            <Style TargetType="Border">
                <Style.Setters>
                    <Setter Property="CornerRadius"
                            Value="10"/>
                </Style.Setters>
            </Style>
        </Style.Resources>
    </Style>

    <!-- Заголовок окон -->
    <Style x:Key="gridTitle"
           TargetType="Grid">
        <Style.Setters>
            <Setter Property="Background"
                    Value="#7BABAA"/>

            <Setter Property="VerticalAlignment"
                    Value="Top"/>

            <Setter Property="Height"
                    Value="60"/>
        </Style.Setters>
    </Style>

    <Style x:Key="txtBlockHomeTitle"
           TargetType="TextBlock">
        <Style.Setters>
            <Setter Property="VerticalAlignment"
                    Value="Center"/>

            <Setter Property="HorizontalAlignment"
                    Value="Center"/>

            <Setter Property="FontSize"
                    Value="40"/>
        </Style.Setters>
    </Style>

    <Style x:Key="stcPanelTitle"
           TargetType="StackPanel">
        <Style.Setters>
            <Setter Property="VerticalAlignment"
                    Value="Center"/>

            <Setter Property="HorizontalAlignment"
                    Value="Right"/>

            <Setter Property="Orientation"
                    Value="Horizontal"/>
        </Style.Setters>
    </Style>

    <!-- Боковое меню -->
    <Style x:Key="gridSidebarMenu"
           TargetType="Grid">
        <Style.Setters>
            <Setter Property="Width"
                    Value="60"/>

            <Setter Property="HorizontalAlignment"
                    Value="Left"/>

            <Setter Property="Background"
                    Value="#7BABAA"/>
        </Style.Setters>
    </Style>

    <Style x:Key="gridSidebarTop"
           TargetType="Grid">
        <Style.Setters>
            <Setter Property="Height"
                    Value="60"/>

            <Setter Property="Background"
                    Value="#7BABAA"/>
        </Style.Setters>
    </Style>

    <Style x:Key="btnOpenMenu"
           TargetType="Button">
        <Style.Setters>
            <Setter Property="Width"
                    Value="60"/>

            <Setter Property="Height"
                    Value="60"/>

            <Setter Property="Background"
                    Value="{x:Null}"/>

            <Setter Property="BorderBrush"
                    Value="{x:Null}"/>

            <Setter Property="VerticalAlignment"
                    Value="Top"/>

            <Setter Property="HorizontalAlignment"
                    Value="Right"/>
        </Style.Setters>
    </Style>

    <Style x:Key="btnCloseMenu"
           TargetType="Button"
           BasedOn="{StaticResource btnOpenMenu}">
        <Style.Setters>
            <Setter Property="Visibility"
                    Value="Collapsed"/>
        </Style.Setters>
    </Style>

    <!-- Элементы бокового меню -->
    <Style x:Key="txtBlockSidebar"
           TargetType="TextBlock">
        <Style.Setters>
            <Setter Property="VerticalAlignment"
                    Value="Center"/>

            <Setter Property="Margin"
                    Value="20 10"/>

            <Setter Property="FontSize"
                    Value="24"/>
        </Style.Setters>
    </Style>
    
    <!-- Область прокрутки (главное окно) -->
    <Style x:Key="scrollHome"
           TargetType="ScrollViewer">
        <Style.Setters>
            <Setter Property="Background"
                    Value="#DFEBEA"/>

            <Setter Property="Margin"
                    Value="60 60 0 0"/>
        </Style.Setters>
    </Style>
    
    <!-- Контейнер (окно поиска путёвки) -->
    <Style x:Key="gridFindTour"
           TargetType="Grid">
        <Style.Setters>
            <Setter Property="Background"
                    Value="#DFEBEA"/>

            <Setter Property="Margin"
                    Value="60 60 0 0"/>
        </Style.Setters>
    </Style>
    
    <!-- Кнопки (окно поиска путёвки) -->
    <Style x:Key="btnFontSize"
           TargetType="Button">
        <Style.Setters>
            <Setter Property="FontSize"
                    Value="32"/>
        </Style.Setters>
    </Style>
    
    <Style x:Key="btnFindTour"
           TargetType="Button"
           BasedOn="{StaticResource btnFontSize}">
        <Style.Setters>
            <Setter Property="Background"
                    Value="#84CCCA"/>

            <Setter Property="Margin"
                    Value="10"/>

            <Setter Property="BorderBrush"
                    Value="#000000"/>

            <Setter Property="BorderThickness"
                    Value="1.2"/>

            <Setter Property="Cursor"
                    Value="Hand"/>
        </Style.Setters>

        <Style.Triggers>
            <Trigger Property="IsMouseOver"
                     Value="True">
                <Setter Property="Background"
                        Value="#74B3B1"/>
            </Trigger>
        </Style.Triggers>

        <Style.Resources>
            <Style TargetType="Border">
                <Style.Setters>
                    <Setter Property="CornerRadius"
                            Value="10"/>
                </Style.Setters>
            </Style>
        </Style.Resources>
    </Style>

    <!-- Область прокрутки (мои билеты) -->
    <Style x:Key="scrollMyTickets"
           TargetType="ScrollViewer">
        <Style.Setters>
            <Setter Property="Background"
                    Value="#DFEBEA"/>

            <Setter Property="Margin"
                    Value="60 60 0 0"/>
        </Style.Setters>
    </Style>
    
    <!-- Контейнер (покупка билетов) -->
    <Style x:Key="gridTours"
           TargetType="Grid">
        <Style.Setters>
            <Setter Property="Background"
                    Value="#DFEBEA"/>
        </Style.Setters>
    </Style>

    <!-- Кнопки (покупка билетов) -->
    <Style x:Key="btnTours"
           TargetType="Button">
        <Style.Setters>
            <Setter Property="Background"
                    Value="#84CCCA"/>

            <Setter Property="Margin"
                    Value="5"/>

            <Setter Property="BorderBrush"
                    Value="#000000"/>

            <Setter Property="BorderThickness"
                    Value="1.2"/>

            <Setter Property="Cursor"
                    Value="Hand"/>
        </Style.Setters>

        <Style.Triggers>
            <Trigger Property="IsMouseOver"
                     Value="True">
                <Setter Property="Background"
                        Value="#74B3B1"/>
            </Trigger>
        </Style.Triggers>

        <Style.Resources>
            <Style TargetType="Border">
                <Style.Setters>
                    <Setter Property="CornerRadius"
                            Value="10"/>
                </Style.Setters>
            </Style>
        </Style.Resources>
    </Style>

    <!-- Кнопка назад (покупка билетов)-->
    <Style x:Key="txtBlockButtonBackContent"
           TargetType="TextBlock">
        <Style.Setters>
            <Setter Property="Margin"
                    Value="-7 6 0 0 "/>

            <Setter Property="FontSize"
                    Value="16"/>
        </Style.Setters>
    </Style>

    <Style x:Key="txtBlockButtonBackContentExcursion"
           TargetType="TextBlock"
           BasedOn="{StaticResource txtBlockButtonBackContent}">
        <Style.Setters>
            <Setter Property="Margin"
                    Value="-7 10 0 0"/>
        </Style.Setters>
    </Style>

    <!-- Контент страницы с выбором отдыха -->
    <Style x:Key="txtBoxGuests"
           TargetType="TextBox">
        <Style.Setters>
            <Setter Property="Background"
                    Value="#FFF2F2"/>

            <Setter Property="FontSize"
                    Value="26"/>

            <Setter Property="Margin"
                    Value="5 5 5 7"/>

            <Setter Property="TextAlignment"
                    Value="Left"/>

            <Setter Property="BorderBrush"
                    Value="#000000"/>

            <Setter Property="BorderThickness"
                    Value="0 0 0 1.2"/>
        </Style.Setters>
    </Style>

    <Style x:Key="txtBlockHoliday"
           TargetType="TextBlock">
        <Style.Setters>
            <Setter Property="Margin"
                    Value="5 0 0 0"/>

            <Setter Property="FontSize"
                    Value="20"/>
        </Style.Setters>
    </Style>

    <!--<Style x:Key="cBoxHoliday"
           TargetType="ComboBox">
        <Style.Setters>
            <Setter Property="Margin"
                    Value="5"/>

            <Setter Property="Background"
                    Value="#0000"/>

            <Setter Property="BorderThickness"
                    Value="0 0 0 1.2"/>

            <Setter Property=""/>
        </Style.Setters>
    </Style>-->

    <!-- Контент страницы с выбором экскурсии -->
    <Style x:Key="txtBlockExcursion"
           TargetType="TextBlock"
           BasedOn="{StaticResource txtBlockHoliday}">
        
    </Style>

    <Style x:Key="txtBlockNumbers"
           TargetType="TextBlock"
           BasedOn="{StaticResource txtBlockExcursion}">
        <Style.Setters>
            <Setter Property="TextWrapping"
                    Value="Wrap"/>
        </Style.Setters>
    </Style>

    <Style x:Key="txtBoxExcursion"
           TargetType="TextBox"
           BasedOn="{StaticResource txtBoxGuests}">
        
    </Style>

    <!-- Контент страницы с выбором круиза -->
    <Style x:Key="txtBlockCruise"
           TargetType="TextBlock"
           BasedOn="{StaticResource txtBlockHoliday}">
        
    </Style>

    <Style x:Key="txtBlockNumberOfPeoples"
           TargetType="TextBlock"
           BasedOn="{StaticResource txtBlockNumbers}">
        
    </Style>

    <Style x:Key="txtBoxCruise"
           TargetType="TextBox"
           BasedOn="{StaticResource txtBoxGuests}">
        
    </Style>

    <Style x:Key="txtBlockDays"
           TargetType="TextBlock"
           BasedOn="{StaticResource txtBlockNumberOfPeoples}">

    </Style>

    <!-- Область прокрутки (покупка билетов) -->
    <Style x:Key="scrollTours"
           TargetType="ScrollViewer">
        <Style.Setters>
            <Setter Property="Background"
                    Value="#4E8E8D"/>
        </Style.Setters>
    </Style>
</ResourceDictionary>