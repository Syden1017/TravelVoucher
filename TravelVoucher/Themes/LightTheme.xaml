                        Value="{x:Null}"/>

                <Setter Property="BorderBrush"
                        Value="{x:Null}"/>

                <Setter Property="VerticalAlignment"
                        Value="Top"/>

                <Setter Property="HorizontalAlignment"
                        Value="Right"/>
            </Style.Setters>
        </Style>

        <Style x:Key="btnCloseMenu"
               TargetType="Button"
               BasedOn="{StaticResource btnOpenMenu}">
            <Style.Setters>
                <Setter Property="Visibility"
                        Value="Collapsed"/>
            </Style.Setters>
        </Style>

        <!-- Элементы бокового меню -->
