<Page x:Class="TravelVoucher.Pages.TourPages.HolidayPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TravelVoucher.Pages.TourPages"
      mc:Ignorable="d" 
      
      d:DesignHeight="600"
      d:DesignWidth="1000"
      
      Loaded="Page_Loaded">

    <Grid Background="Aquamarine">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.6*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition Width="1.7*"/>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition Width="2.7*"/>
            <ColumnDefinition Width="0.2*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="1.4*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="1.6*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.55*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="1" 
                   Grid.Row="1"
                   Text="Откуда?"
                   FontSize="24"
                   HorizontalAlignment="Center"/>

        <ComboBox x:Name="cBoxFrom"
                  Grid.Column="1"
                  Grid.Row="2"
                  Grid.ColumnSpan="2"
                  Width="150"/>

        <ComboBox x:Name="cBoxTransport"
                  Grid.Column="1"
                  Grid.Row="4"
                  Grid.ColumnSpan="2"
                  Width="150"/>

        <ComboBox x:Name="cBoxHotel"
                  Grid.Column="1"
                  Grid.Row="5"
                  Grid.ColumnSpan="2"
                  Width="150"/>

        <TextBlock Grid.Column="1" 
                   Grid.Row="7"
                   Text="Класс отеля"
                   FontSize="24"
                   HorizontalAlignment="Center"/>

        <TextBlock Grid.Column="1" 
                   Grid.Row="8"
                   Text="Stars"
                   FontSize="24"
                   HorizontalAlignment="Center"/>

        <TextBlock Grid.Column="1" 
                   Grid.Row="10"
                   Text="ComboBox"
                   FontSize="24"
                   HorizontalAlignment="Center"/>

        <TextBlock Grid.Column="1" 
                   Grid.Row="12"
                   Text="Количество гостей"
                   TextWrapping="Wrap"
                   FontSize="16"/>

        <TextBlock Grid.Column="4" 
                   Grid.Row="1"
                   Text="Куда?"
                   FontSize="24"
                   HorizontalAlignment="Center"/>

        <ComboBox x:Name="cBoxTo"
                  Grid.Column="4"
                  Grid.Row="2"
                  Width="150"/>

        <TextBlock Grid.Column="4"
                   Grid.Row="4"
                   Text="Дата"
                   FontSize="24"/>

        <DatePicker Grid.Column="4" 
                    Grid.Row="5"
                    Width="220"/>

        <Button x:Name="btnBuyTicket" 
                Click="btnBuyTicket_Click"
                Content="Купить"
                Grid.Column="4"
                Grid.Row="12"
                Margin="5 0 5 0"/>

        <ScrollViewer Grid.Column="6" 
                      Grid.Row="1"
                      Grid.RowSpan="12"
                      Background="BlanchedAlmond">
            
        </ScrollViewer>

        <StackPanel Grid.Column="0"
                    Grid.Row="14"
                    Orientation="Horizontal">
            <Button x:Name="btnBack"
                    Click="btnBack_Click"
                    Style="{DynamicResource mainButton}">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="C:\Users\User\Source\Repos\TravelVoucher-local\TravelVoucher\Images\ControlImages\backico.png"/>

                        <TextBlock Text="Назад"
                                   Margin="-7 6 0 0"
                                   FontSize="16"/>
                    </StackPanel>
                </Button.Content>
            </Button>
        </StackPanel>
    </Grid>
</Page>
